<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calender.timer2Activity"
    android:background="@drawable/main_background">

    <TextView
        android:id="@+id/TimerTitle"
        android:layout_width="407dp"
        android:layout_height="45dp"
        android:fontFamily="@font/fontfont"
        android:gravity="center"
        android:text="Workout Timer"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/fontfont"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TimerTitle"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center"
            android:text=" "
            android:textAlignment="center"
            android:textSize="100dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnReset"
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="337dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/button3_background"
                android:fontFamily="@font/fontfont"
                android:onClick="clickHandler"
                android:text="Reset"
                android:textColor="#ffffff"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:orientation="horizontal"
            android:paddingLeft="3dp"
            android:paddingRight="3dp">

            <Button
                android:id="@+id/plus60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/button4_background"
                android:fontFamily="@font/fontfont"
                android:onClick="clickHandler"
                android:text="1분 추가"
                android:textSize="18dp" />



            <Button
                android:id="@+id/plus30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/button4_background"
                android:fontFamily="@font/fontfont"
                android:onClick="clickHandler"
                android:text="30초 추가"
                android:textSize="18dp" />

            <Button
                android:id="@+id/minus30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/button4_background"
                android:fontFamily="@font/fontfont"
                android:onClick="clickHandler"
                android:text="30초 빼기"
                android:textSize="18dp" />

            <Button
                android:id="@+id/minus60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/button4_background"
                android:fontFamily="@font/fontfont"
                android:onClick="clickHandler"
                android:text="1분 빼기"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnStart"
                android:layout_width="350dp"
                android:layout_height="65dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/button2_background"
                android:fontFamily="@font/fontfont"
                android:onClick="clickHandler"
                android:text="Start"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
